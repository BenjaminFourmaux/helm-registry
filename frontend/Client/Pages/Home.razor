@page "/"
@using frontend.Client.Components
@using frontend.Models
@using frontend.Services
@inject BackendAPI BackendAPIService

<PageTitleTemplated>Home</PageTitleTemplated>

<div id="home">
    <div class="container-fluid">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <h3>Welcome on</h3>
            <h2 class="registry-name">@homeData.Name</h2>
            <h5 class="registry-description">@homeData.Description</h5>
        </div>

        <hr/>

        <div class="row justify-content-center">
            <div class="col-8">
                <div class="registry-info-label">Number of Repositories:</div>
                <div class="registry-info-value"><Badge Color="BadgeColor.Primary"><Icon Name="IconName.ArchiveFill"/> @homeData.NumberOfRepos</Badge></div>
            </div>
            <div class="col-4 pt-3">
                <div class="registry-info-label">Maintainer</div>
                @if (homeData.Maintainer != null)
                {
                    <div class="registry-info-value">@homeData.Maintainer</div>
                }
                else
                {
                    <dic class="registry-info-value"><i>No maintainer</i></dic>
                }
            </div>
            <div class="col-8">
                <div class="registry-info-label">Label :</div>
                @if (homeData.Labels.Length == 0)
                {
                    <span><i>No labels</i></span>
                }
                else
                {
                    <TagInput Tags="@homeData.ToTagItem()" />
                }
            </div>
            <div class="col-4 pt-3">
                @if (homeData.MaintainerUrl != null)
                {
                    <div class="registry-info-value">
                        <a href="@homeData.MaintainerUrl">@homeData.MaintainerUrl <Icon Name="IconName.BoxArrowInUpRight"/></a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@code {
    private RegistryInfo homeData;

    protected override void OnInitialized()
    {
        homeData = BackendAPIService.RegistryInfo;
    }
}